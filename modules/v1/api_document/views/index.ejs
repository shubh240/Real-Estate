<html lang="en">
	<head>
		<meta charset="UTF-8">
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
			rel="stylesheet"
			/>
		<link
			href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
			rel="stylesheet"
			/>
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css"
			rel="stylesheet"
			/>

<!-- 
		<link rel="shortcut icon"
			href="https://bboyorealestate-pord.s3.af-south-1.amazonaws.com/bboyologo.png"> -->
		<link rel="shortcut icon" href="<%= GLOBALS.LOGO%>">
		<title><%= GLOBALS.APP_NAME %> API</title>
			<style type="text/css">
				.buttonColor {
					/* background: rgb(16,108,115);
					background: linear-gradient(0deg, rgba(16,108,115,1) 0%, rgba(0,75,79,1) 100%); */
					background: rgb(0,0,0);
					background: linear-gradient(0deg, rgba(0,0,0,0.87718837535014) 0%, rgba(0,0,0,1) 100%);
				}
				.buttonColor:hover {
					background: rgb(5, 5, 5);
					background: linear-gradient(0deg, rgba(0, 0, 0, 1) 0%, rgba(0,0,0,0.87718837535014) 100%);
				}
				
				.sectionColor {
					/* background: rgb(16,108,115);
					background: linear-gradient(0deg, rgba(16,108,115,0.938813025210084) 0%, rgba(0,75,79,0.908000700280112) 100%); */

					background-image: url("https://images.pexels.com/photos/691668/pexels-photo-691668.jpeg");
  					background-color: #cccccc;
  					background-position: center;
  					background-repeat: no-repeat;
  					background-size: cover;
  					position: relative;
				}
			</style>
		</head>
		<div role="navigation" class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<div class="navbar-brand" style="font-weight: 500;font-size: 30px;">
						<img src="<%= GLOBALS.LOGO %>" alt=""
						width="35" height="35" class="d-inline-block align-text-top">
						<%= GLOBALS.APP_NAME %>
						</div>
					</div>
				</div>
			</div>
			<body style="overflow: hidden;">
				<section class="vh-100 sectionColor">
					<div class="container py-5 h-75">
						<div class="row d-flex justify-content-center align-items-center h-100">
							<div class="col-12 col-md-8 col-lg-6 col-xl-5">
								<% if (message.length> 0) { %>
									<div class="alert alert-danger col-md-12"><%= message %></div>
										<% } %>
											<div class="card shadow-5-strong" style="border-radius: 1rem;">
												<div class="card-body p-5 text-center">

													<h3 class="mb-5">Sign in</h3>
													<form id="loginform" class="form-horizontal" role="form"
														method="post" action="/v1/api_document/login">

														<div class="form-outline mb-4">
															<input type="password" id="login-password" class="form-control
																form-control-lg" name="password" placeholder="Password" <% if
																(message.length> 0) { %>
															style="border-bottom: 2px solid;border-bottom-color:red;"
															<% }else{ %>
																style="border-bottom: 2px solid;"
																<% } %>
																	/>
																	<label class="form-label" for="login-password">Password</label>
																</div>


																<button id="btn-login" class="btn btn-primary btn-lg btn-block
																	buttonColor"
																	type="submit">Login</button>
															</form>

														</div>
													</div>
												</div>
											</div>
										</div>
									</section>
									<script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
								</body>
							</html>